from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC

from src.utils.constants import ADD_ADMIN

import time


def test_add_admin(driver):
    try:
        add_admin = WebDriverWait(driver, 10).until(EC.presence_of_element_located((By.XPATH, ADD_ADMIN)))
        add_admin.click()
        time.sleep(2)
       
    
    except Exception as e:
        print(f"Error in {test_add_admin}: {e}")
        raise

